{
  "name": "aws-api-gateway-editor",
  "version": "0.1.0",
  "description": "Editor desktop especializado em contratos OpenAPI v3.x para API Gateways",
  "main": "dist/electron/main.js",
  "author": "John",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:angular\" \"npm run dev:electron\"",
    "dev:angular": "ng serve",
    "dev:electron": "wait-on http://localhost:4200 && electron . --dev",
    "build": "npm run build:angular && npm run build:electron",
    "build:angular": "ng build --configuration production",
    "build:electron": "tsc -p tsconfig.electron.json",
    "test": "ng test",
    "test:e2e": "playwright test",
    "lint": "ng lint && eslint src/electron/**/*.ts",
    "typecheck": "tsc --noEmit -p tsconfig.app.json && tsc --noEmit -p tsconfig.electron.json",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,json}\"",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "openapi",
    "swagger",
    "api-gateway",
    "aws",
    "electron",
    "angular",
    "editor"
  ],
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/cdk": "^19.2.19",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/material": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@apidevtools/swagger-parser": "^10.1.0",
    "@octokit/rest": "^21.0.0",
    "@stoplight/spectral-core": "^1.18.3",
    "@stoplight/spectral-rulesets": "^1.18.1",
    "buffer": "^6.0.3",
    "js-yaml": "^4.1.0",
    "monaco-editor": "^0.52.0",
    "ngx-quill": "^27.1.2",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "quill": "^2.0.3",
    "rxjs": "^7.8.1",
    "tslib": "^2.8.1",
    "util": "^0.12.5",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^19.0.1",
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular-eslint/builder": "^19.0.0",
    "@angular-eslint/eslint-plugin": "^19.0.0",
    "@angular-eslint/eslint-plugin-template": "^19.0.0",
    "@angular-eslint/schematics": "^19.0.0",
    "@angular-eslint/template-parser": "^19.0.0",
    "@angular/cli": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "@playwright/test": "^1.49.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "concurrently": "^9.1.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.2",
    "typescript": "^5.6.3",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.john.aws-api-gateway-editor",
    "productName": "AWS API Gateway Editor",
    "directories": {
      "output": "dist/installers"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png"
    }
  }
}
